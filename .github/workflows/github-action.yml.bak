on:
  release:
    types: [published]
  workflow_dispatch:
    inputs:
      ci:
        description: 'CI'
        required: true
        default: 'circleci' 
        type: choice
        options:
        - circleci
        - github-actions
  
jobs:
  trigger-github-action:
    runs-on: ubuntu-latest
    if: ${{ inputs.ci }} == 'github-actions'
    steps:
      - name: Print the ci to STDOUT
        run: echo  The tags are ${{ inputs.ci }}